{{#x-grid as |g| }}
  {{#g.cell col=2}}{{/g.cell}}
  {{#g.cell col=8}}
    {{#x-grid as |g| }}
      {{#each portfolioData.items as | item |}}
        {{#g.cell col=4}}
            {{#link-to "portfolio.show" item.id}}
              <img src='{{pathPrefix}}/{{item.id}}/{{item.imagePaths.firstObject}}' width='200px' height="200px" class="portfolio-preview-thumb" />
            {{/link-to}}
        {{/g.cell}}
      {{/each}}
    {{/x-grid}}  
  {{/g.cell}}
  {{#g.cell col=2}}{{/g.cell}}
{{/x-grid}}
